# Production Database Development Environment
# Copy this to .env.production and fill in your actual values
# This file allows you to work against the production database locally
# WARNING: This connects to live production data - use with caution!

# Firebase Configuration for Production
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=vz-price-guide.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=vz-price-guide
VITE_FIREBASE_STORAGE_BUCKET=vz-price-guide.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
VITE_FIREBASE_APP_ID=your_app_id_here

# Disable emulators to use production database
VITE_FIREBASE_EMULATORS=0

# Development mode flag for additional safety
VITE_DEV_MODE=production
